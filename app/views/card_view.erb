<link href='http://fonts.googleapis.com/css?family=Permanent+Marker' rel='stylesheet' type='text/css'>
<div class="content">

    <div class="header">
      <div id="logo">
        <a href="/"><img src="/flashcard_logo.png"></a>
      </div>

      <div id="user_tools">
        <div id="username">
          <%= current_user.name %>
        </div>
        <div>
          <form action="/logout" method="POST">
          <input type="image" name="Submit" src="/exit-button.png" alt="Log out">
          </form>
        </div>
      </div>
    </div>


  </div>

  <div class="card animated flipInY">
    <p><%= @card.question %></p>
  </div> 

  <div id="form" >
    <form action="/round/<%= @round.id %>/card/<%= @card.id %>" method="post">
      <input type="text" class="textfield" size="30" name="guess" autofocus>
      <input type="submit" class="button" value="&#8629;">
    </form>
    <br><br>
    <a href="/"><input type="submit" class="button" value="Continue Later"></a>
  </div>



  <div class="footer">
    <img src="/flashcard_logo.png"> is a collaborative project from Meara, Katy, Daniel, and Chirag.
  </div>
</div>


