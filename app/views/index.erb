<div class="container">
  <h1>Welcome to Flashcards!</h1>

  <!-- clickable deck links for each deck, to post -->

<h3>Pick a deck to begin!</h3>

<% @decks.each do |deck| %>

<form action="/deck/<%= deck.id %>/round/" method="POST">
  <input type="submit" value = "<%= deck.title %>">
</form>

<% end %>

<h3>Your history:</h3>
<table cellpadding="8">
  <th>Completed Round</th>
  <th>Correct</th>
<% rounds_completed = current_user.rounds.sort_by { |round| round.id}.reverse %>
<% rounds_completed.each do |round| %>
  <% if round.complete? %>
<tr>
<td><%= round.deck.title %></td>
<td><%= round.percent_correct %>%</td>
  <% end %>
<% end %>
</tr>
</table>


</div>
