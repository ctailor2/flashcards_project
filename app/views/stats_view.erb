<link href='http://fonts.googleapis.com/css?family=Permanent+Marker' rel='stylesheet' type='text/css'>
<div class="content">

    <div class="header">
      <div id="logo">
        <a href="/"><img src="/flashcard_logo.png"></a>
      </div>

      <div id="user_tools">
        <div id="username">
          <%= current_user.name %>
        </div>
        <div>
          <form action="/logout" method="POST">
          <input type="image" name="Submit" src="/exit-button.png" alt="Log out">
          </form>
        </div>
      </div>
    </div>






  <div class="leftcolumn">
    <div class="animated rotateIn">
    <img src="<%= stats_messages(@round)[:image_url] %>">
    </div>
  </div>

  <div class="rightcolumn">
    <div class="speechbubble">
        <%= stats_messages(@round)[:h1] %><br>
        <%= stats_messages(@round)[:h3] %>
    </div>
    <ul class="statstable">
    <li>Number of cards: <%= @round.deck.cards.count %></li>
    <li>Total number of guesses: <%= @round.num_total_attempts %></li>
    <li>Number of incorrect guesses: <%= @round.num_incorrect_attempts %></li>
    <li>Percent correct: <%= @round.percent_correct %>%</li>
    <li>Average number of guesses until correct: <%= @round.avg_num_guesses %></li>
  </ul>
  </div>

  <div id="form">
  <form action="/deck/<%= @round.deck_id %>/newround" method="POST">
    <input type="submit" class="button" value="Try Again">
  </form>
  </div>
</div>
  <div class="footer">
    <img src="/flashcard_logo.png"> is a collaborative project from Meara, Katy, Daniel, and Chirag.
  </div>
</div>
